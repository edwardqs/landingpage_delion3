---
import Container from '../core/Container.astro';
import SectionTitle from '../core/SectionTitle.astro';
import { site } from '../../data/site';
import quienessomosImg from '../../assets/images/index/quienessomos.svg';
---
<section id="nosotros" class="py-16 font-['Inter']">
  <Container>
    <div class="mt-10 grid md:grid-cols-2 gap-16 items-center">
      <div class="w-full mx-auto md:mx-0 text-left" data-aos="fade-right">
        <h2 class="text-4xl md:text-5xl font-normal text-[#00142C] mb-4">{site.quienesSomos.title}</h2>
        <div class="h-[1px] w-full bg-gradient-to-r from-[#020B26] to-[#0044FF] mb-8"></div>
        <p class="text-black text-2xl md:text-[24px] leading-[2.5]">
          {site.quienesSomos.subtitle}
        </p>
      </div>
      <div class="overflow-hidden flex justify-center md:justify-end" data-aos="fade-left">
        <img src={quienessomosImg.src} alt="Quienes Somos" class="w-full max-w-[650px] aspect-[531/344] h-auto object-cover rounded-[20px]" />
      </div>
    </div>
  </Container>
</section>
