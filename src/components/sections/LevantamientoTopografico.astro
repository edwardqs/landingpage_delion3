<section class="py-12 md:py-16">
  <div class="w-full px-4 sm:px-6 md:px-8 lg:px-10 max-w-[1800px] mx-auto">
    <div class="space-y-4 w-full">
      <!-- Título -->
      <h2 
        class="font-['Inter'] text-[24px] sm:text-[28px] md:text-[32px] lg:text-[36px] leading-[100%] tracking-[0%] text-[#00142C] font-medium text-left"
        data-aos="fade-up"
      >
        Levantamiento topográfico con <span class="font-bold">escáner lidar</span>
      </h2>

      <!-- Línea divisoria -->
      <div 
        class="w-full h-[1px] bg-gradient-to-r from-[#030019] to-[#1A00DC]"
        data-aos="fade-up"
        data-aos-delay="100"
      ></div>

      <!-- Iconos -->
      <div class="w-full mt-8 md:mt-12 flex flex-wrap justify-center gap-6 sm:gap-8 md:gap-12 lg:gap-16 items-center" data-aos="fade-up" data-aos-delay="200">
        <img src="/src/assets/icons/productos/hardware/topografico1.svg" alt="Icono Topográfico 1" class="h-12 w-auto sm:h-16 md:h-20 lg:h-24 object-contain hover:scale-110 transition-transform duration-300" />
        <img src="/src/assets/icons/productos/hardware/topografico2.svg" alt="Icono Topográfico 2" class="h-12 w-auto sm:h-16 md:h-20 lg:h-24 object-contain hover:scale-110 transition-transform duration-300" />
        <img src="/src/assets/icons/productos/hardware/topografico3.svg" alt="Icono Topográfico 3" class="h-12 w-auto sm:h-16 md:h-20 lg:h-24 object-contain hover:scale-110 transition-transform duration-300" />
        <img src="/src/assets/icons/productos/hardware/topografico4.svg" alt="Icono Topográfico 4" class="h-12 w-auto sm:h-16 md:h-20 lg:h-24 object-contain hover:scale-110 transition-transform duration-300" />
        <img src="/src/assets/icons/productos/hardware/topografico5.svg" alt="Icono Topográfico 5" class="h-12 w-auto sm:h-16 md:h-20 lg:h-24 object-contain hover:scale-110 transition-transform duration-300" />
      </div>

      <!-- Contenedor Principal LidarScan (1160x1026) -->
      <div class="w-full max-w-[1160px] mx-auto mt-16 md:mt-20 flex flex-col gap-[40px]">
        
        <!-- Fila Superior: Info + 3 Imágenes -->
        <div class="w-full flex flex-col lg:flex-row gap-8 lg:gap-[40px] items-start justify-center">
          
          <!-- Información (Lado Izquierdo) -->
          <div 
            class="w-full lg:max-w-[490px] flex flex-col gap-[40px] items-start p-0"
            data-aos="fade-right"
          >
            <!-- Logo LidarScan -->
            <div class="w-full max-w-[367.28px]">
              <img 
                src="/src/assets/images/productos/hardware/lidarscan.svg" 
                alt="LidarScan" 
                class="w-full h-auto object-contain"
              />
            </div>

            <!-- Descripción -->
            <p class="font-['Inter'] text-[24px] leading-[100%] tracking-[0%] text-[#00142C] font-regular">
              Instrumento portátil para el mapeo tridimensional de superficies basado en tecnología Lidar.
            </p>

            <!-- Lista de Características -->
            <ul class="space-y-4">
              {[
                "Modelos digitales (nubes de puntos).",
                "Alcance de 240 metros.",
                "Sección mínima: 1.5 m x 1.5 m (UG).",
                "Frecuencia de muestreo de 100 ksps.",
                "FOV de 38.4°",
                "Temperatura de -20°C a 65°C.",
                "Cubicación de StokPile."
              ].map((item) => (
                <li class="flex items-center gap-3">
                  <img src="/src/assets/icons/productos/hardware/check_blue.svg" alt="Check" class="w-6 h-6 flex-shrink-0" />
                  <span class="font-['Inter'] text-[24px] leading-[100%] tracking-[0%] text-[#00142C] font-regular">{item}</span>
                </li>
              ))}
            </ul>

            <!-- Botón -->
            <a 
              href="#contacto" 
              class="w-[200px] h-[48px] rounded-[12px] border-[0.5px] border-[#FFFFFF] bg-[linear-gradient(90deg,#1A00DC_0%,#7768E8_50.48%,#1A00DC_100%)] text-[#FFFFFF] font-['Inter'] font-medium text-[16px] shadow-[0px_0px_60px_rgba(0,255,231,0.12)] hover:shadow-lg hover:brightness-110 transition-all duration-300 flex items-center justify-center"
              style="text-shadow: 0px 0px 100px #FFFFFF;"
            >
              Botón
            </a>
          </div>

          <!-- Imágenes (Lado Derecho) -->
          <div 
            class="w-full max-w-[630px] mx-auto lg:mx-0 relative aspect-[630/693]"
            data-aos="fade-left"
          >
            <!-- Contenedor Grid -->
            <div class="w-full h-full grid grid-cols-2 grid-rows-[57%_auto] gap-[2.5%]">
              
              <!-- Imagen 1 (Superior Izquierda) -->
              <div class="w-full h-full rounded-[12px] overflow-hidden">
                <img 
                  src="/src/assets/images/productos/hardware/Photo1.svg" 
                  alt="Levantamiento Topográfico 1" 
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                />
              </div>

              <!-- Imagen 2 (Superior Derecha) -->
              <div class="w-full h-full rounded-[12px] overflow-hidden">
                <img 
                  src="/src/assets/images/productos/hardware/Photo2.svg" 
                  alt="Levantamiento Topográfico 2" 
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                />
              </div>

              <!-- Imagen 3 (Inferior - Ancho completo) -->
              <div class="col-span-2 w-full h-full rounded-[12px] overflow-hidden">
                <img 
                  src="/src/assets/images/productos/hardware/Photo.svg" 
                  alt="Levantamiento Topográfico 3" 
                  class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                />
              </div>
            </div>
          </div>
        </div>

        <!-- Fila Inferior: 2 Imágenes -->
        <div 
          class="w-full flex flex-col lg:flex-row gap-[16px] justify-center"
          data-aos="fade-up"
        >
          <!-- Imagen 3 -->
          <div class="w-full lg:w-[39%] aspect-[452/293] rounded-[12px] overflow-hidden flex-shrink-0">
            <img 
              src="/src/assets/images/productos/hardware/Photo3.svg" 
              alt="Levantamiento Topográfico 4" 
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
            />
          </div>

          <!-- Imagen 4 -->
          <div class="w-full lg:w-[59%] aspect-[692/293] rounded-[12px] overflow-hidden flex-shrink-0">
            <img 
              src="/src/assets/images/productos/hardware/Photo4.svg" 
              alt="Levantamiento Topográfico 5" 
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
