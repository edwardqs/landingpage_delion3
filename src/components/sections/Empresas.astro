---
import Container from '../core/Container.astro';
import SectionTitle from '../core/SectionTitle.astro';

import img1 from '../../assets/images/index/animacion infinita/image 1.svg';
import img2 from '../../assets/images/index/animacion infinita/image 2.svg';
import img3 from '../../assets/images/index/animacion infinita/image 3.svg';
import img4 from '../../assets/images/index/animacion infinita/image 4.svg';
import img5 from '../../assets/images/index/animacion infinita/image 5.svg';

const images = [img1, img2, img3, img4, img5];
---

<section class="py-16 overflow-hidden font-['Inria_Sans']">
  <Container>
    <SectionTitle title="Empresas que confÃ­an en nosotros" center={false} titleClass="text-[#163760] font-bold" />
    
    <div class="mt-12 w-full inline-flex flex-nowrap overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-200px),transparent_100%)]">
        <ul class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll">
            {images.map((img) => (
                <li>
                    <img src={img.src} alt="Empresa cliente" class="h-16 w-auto object-contain transition-all duration-300" />
                </li>
            ))}
        </ul>
        <ul class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-infinite-scroll" aria-hidden="true">
            {images.map((img) => (
                <li>
                    <img src={img.src} alt="Empresa cliente" class="h-16 w-auto object-contain transition-all duration-300" />
                </li>
            ))}
        </ul>
    </div>
  </Container>
</section>
