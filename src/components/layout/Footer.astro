---
import Container from '../core/Container.astro';
import { site } from '../../data/site';

// Assets
import delionLogo from '../../assets/images/index/delion-logo.svg';
import phoneIcon from '../../assets/icons/footer/phone.svg';
import emailIcon from '../../assets/icons/footer/Email.svg';
import clockIcon from '../../assets/icons/footer/Clock.svg';
import addressIcon from '../../assets/icons/footer/Address.svg';
import linkedinIcon from '../../assets/icons/footer/LinkedIn.svg';
import facebookIcon from '../../assets/icons/footer/Facebook.svg';
import earthGlobeIcon from '../../assets/icons/Earth Globe.svg';

// Map placeholder - using a generic map image since specific map path wasn't provided in prompt
// You might want to replace this with an actual map image if available in assets
const mapImage = "https://placehold.co/600x300/e2e8f0/1e293b?text=Mapa+Ubicacion"; 
---

<footer id="contacto" class="bg-[#002699] text-white py-12 font-['Inter']">
  <Container>
    <div class="grid lg:grid-cols-2 gap-12">
      
      {/* Left Column: Logo & Contact Info */}
      <div class="space-y-6">
        {/* Logo */}
        <div>
           <img src={delionLogo.src} alt="Delion" class="h-16 w-auto" />
        </div>

        {/* Social Media */}
        <div class="flex gap-4">
          <a href={site.contacto.social.linkedin} target="_blank" rel="noopener noreferrer" class="hover:opacity-80 transition-opacity">
            <img src={linkedinIcon.src} alt="LinkedIn" class="w-8 h-8" />
          </a>
          <a href={site.contacto.social.facebook} target="_blank" rel="noopener noreferrer" class="hover:opacity-80 transition-opacity">
            <img src={facebookIcon.src} alt="Facebook" class="w-8 h-8" />
          </a>
        </div>

        <div class="space-y-4">
          {/* Phone */}
          <div class="flex items-center gap-4">
            <img src={phoneIcon.src} alt="Teléfono" class="w-5 h-5" />
            <span class="text-base font-normal">{site.contacto.phone}</span>
          </div>

          {/* Email */}
          <div class="flex items-center gap-4">
            <img src={emailIcon.src} alt="Email" class="w-5 h-5" />
            <a href={`mailto:${site.contacto.email}`} class="text-base font-normal hover:text-blue-200 transition-colors">
              {site.contacto.email}
            </a>
          </div>

          {/* Schedule */}
          <div class="flex items-start gap-4">
            <img src={clockIcon.src} alt="Horario" class="w-5 h-5 mt-1" />
            <div class="flex flex-col">
              <span class="text-base font-normal">Horario de atención:</span>
              <span class="text-base font-normal">{site.contacto.schedule}</span>
            </div>
          </div>

          {/* Language Selector */}
          <div class="pt-4">
            <button class="flex items-center gap-2 border border-white/30 rounded-full px-4 py-2 hover:bg-white/10 transition-colors">
              <img src={earthGlobeIcon.src} alt="" class="w-4 h-4" />
              <span class="text-sm font-normal">Español</span>
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
          </div>
          
          <div class="pt-4 text-sm font-normal text-white/60">
            © 2026 Delion Perú. Todos los derechos reservados.
          </div>
        </div>
      </div>

      {/* Right Column: Address & Map */}
      <div class="space-y-6">
        <div class="flex items-start gap-4">
          <img src={addressIcon.src} alt="Dirección" class="w-5 h-5 mt-1" />
          <span class="text-base font-normal w-full">{site.contacto.address}</span>
        </div>

        {/* Map Image Container */}
        <div class="w-full h-[300px] bg-gray-200 rounded-[20px] overflow-hidden">
             <div class="w-full h-full flex items-center justify-center bg-slate-100 text-slate-500">
                <iframe 
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3949.936016687956!2d-79.02993292414375!3d-8.107984681116474!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x91ad3d830347690d%3A0x365700513692221d!2sC.%20Colombia%20150%2C%20Trujillo%2013001!5e0!3m2!1ses-419!2spe!4v1709583469871!5m2!1ses-419!2spe" 
                    width="100%" 
                    height="100%" 
                    style="border:0;" 
                    allowfullscreen="" 
                    loading="lazy" 
                    referrerpolicy="no-referrer-when-downgrade"
                    class="w-full h-full"
                ></iframe>
             </div>
        </div>
      </div>

    </div>
  </Container>
</footer>
