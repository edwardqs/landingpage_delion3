---
import Container from '../core/Container.astro';
import delionLogo from '../../assets/images/index/delion-logo.svg';
import earthGlobeIcon from '../../assets/icons/earth-globe.svg';
---

<nav class="fixed inset-x-0 top-0 h-[70px] bg-[#002269] text-white z-50 px-[35px]">
  <div class="relative h-full max-w-[1440px] mx-auto flex items-center justify-between">
    <!-- Logo a la izquierda -->
    <div class="flex items-center">
      <a href="/" class="inline-flex items-center" aria-label="Delion logo">
        <img src={delionLogo.src} alt="Delion" class="h-[48px] w-auto" />
      </a>
    </div>

    <!-- Menú central -->
    <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 hidden lg:flex items-center gap-8">
      <div class="relative group">
        <button class="font-['Inter', 'sans-serif'] text-[15px] font-normal tracking-wide hover:text-blue-200 transition-colors flex items-center gap-1">
          PRODUCTOS
          <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <!-- Dropdown -->
        <div class="hidden group-hover:block absolute top-full left-0 mt-2 bg-white text-gray-900 rounded-lg shadow-lg py-2 min-w-[200px]">
          <a href="#hardware" class="block px-4 py-2 hover:bg-gray-100 transition-colors">HARDWARE</a>
          <a href="#software" class="block px-4 py-2 hover:bg-gray-100 transition-colors">SOFTWARE</a>
        </div>
      </div>
      <a href="#servicios" class="font-['Inter', 'sans-serif'] text-[15px] font-normal tracking-wide hover:text-blue-200 transition-colors">
        SERVICIOS
      </a>
      <a href="#blog" class="font-['Inter', 'sans-serif'] text-[15px] font-normal tracking-wide hover:text-blue-200 transition-colors">
        BLOG
      </a>
      <a href="#nosotros" class="font-['Inter', 'sans-serif'] text-[15px] font-normal tracking-wide hover:text-blue-200 transition-colors">
        NOSOTROS
      </a>
    </div>

    <!-- Zona derecha -->
    <div class="flex items-center gap-4">
      <!-- Selector de idioma -->
      <button class="hidden sm:flex items-center gap-2 hover:text-blue-200 transition-colors">
        <img src={earthGlobeIcon.src} alt="" class="h-5 w-5" />
        <span class="font-['Inter', 'sans-serif'] text-[15px] font-medium">Español</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>

      <!-- Link NUBE -->
      <a href="#nube" class="hidden md:inline font-['Inter', 'sans-serif'] text-[15px] font-medium tracking-wide hover:text-blue-200 transition-colors">
        NUBE
      </a>

      <!-- Botón CONTACTO -->
      <a 
        href="#contacto" 
        class="border border-white rounded-[13px] h-[40px] px-6 flex items-center justify-center font-['Inter', 'sans-serif'] text-[15px] font-medium tracking-wide hover:bg-white hover:text-[#002269] transition-all duration-300"
      >
        CONTACTO
      </a>

      <!-- Menú móvil (hamburguesa) -->
      <button class="lg:hidden flex flex-col gap-1.5 w-6 h-6" aria-label="Menu">
        <span class="w-full h-0.5 bg-white rounded"></span>
        <span class="w-full h-0.5 bg-white rounded"></span>
        <span class="w-full h-0.5 bg-white rounded"></span>
      </button>
    </div>
  </div>
</nav>